@using OrderRice.Model

<table class="table">
    <thead>
        <tr>
            <th>Dishes</th>
            <th>Price</th>
            <th>Price +Plus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dish in Dishs)
        {
            <MenuItem Dish="@dish" OnEventChange="@OnEventChange" />
        }
    </tbody>
</table>
@code {
    [Parameter]
    public List<Dish> Dishs { get; set; }
    [Parameter]
    public EventCallback<string> OnEventChange { get; set; }
}
