@using OrderRice.Model

<div>
    <input type="checkbox" @bind="@isCheck" @onclick="eventArgs => { HandleCheckboxDish(); }" />
    <label>@Dish.name</label>
</div>

@code {
    [Parameter]
    public EventCallback<string> OnClickDish { get; set; }
    [Parameter]
    public Dish Dish { get; set; }

    bool isCheck { get; set; } = false;

    void HandleCheckboxDish()
    {
        OnClickDish.InvokeAsync(Dish.id);
    }
    public void Refesh()
    {
        isCheck = false;
    }
}